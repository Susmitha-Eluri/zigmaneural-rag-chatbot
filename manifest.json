{
  "manifest_version": 3,
  "name": "ZigmaNeural Assistant",
  "version": "1.2",
  "description": "ZigmaNeural specific Knowledge Assistant",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1:8001/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}